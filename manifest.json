{
  "manifest_version": 3,
  "name": "PrivacyPal",
  "version": "0.1",
  "description": "Capture and store privacy policies locally.",
  "icons": {
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "tabs", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["<all_urls>"]
}
